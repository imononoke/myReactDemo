{
    "compilerOptions": {
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es2015",
            "dom",
            "es2015.promise"
        ],
        "sourceMap": true,
        "jsx": "react",
        "strict": false,
        "noImplicitAny": false,
        "allowJs": true,
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}